
<?php

class Post_property_model extends CI_Model{
	$email='p.gpt10@gmail.com';
	$user=$_POST['user'];
	$sellrent=$_POST['sellrent'];
	$prop_type=$_POST['prop_type'];
	$city=$_POST['city'];
	$address=$_POST['address'];
	$bedrooms=$_POST['bedrooms'];
	$price=(int)$_POST['price'];




	$servername = "localhost";
	$username = "root";
	$password = "samsungu800";
	$dbname = "100acres";
	
	// Create connection
	$conn = new mysqli($servername, $username, $password, $dbname);
	// Check connection
	if ($conn->connect_error) {
	    die("Connection failed: " . $conn->connect_error);
	}

	$sql = "INSERT INTO property VALUES ('$email','$user','$sellrent','$prop_type','$city','$address','$bedrooms','$price',NOW())";

	if ($conn->query($sql) === TRUE) {
	    echo "New record created successfully";
	} else {
	    echo "Error: " . $sql . "<br>" . $conn->error;
	}
	$conn->close();

}
?> 
